<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - NDC Demo</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("NDC Oslo 2015 demo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Csp", "Csp", "Home")</li>
                    <li>@Html.ActionLink("Csp2", "Csp2", "Home")</li>
                    <li>@Html.ActionLink("Xfo", "Xfo", "Home")</li>
                    <li>@Html.ActionLink("XfoMvc", "XfoMvc", "Home")</li>
                    <li>@Html.ActionLink("TLS", "Tls", "Home")</li>
                    <li>@Html.ActionLink("TlsRequireHttps", "TlsRequireHttps", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    @RenderSection("secondNavbar", required: false)



    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            Project site: <a href="https://github.com/NWebsec/NWebsec">github.com/NWebsec/NWebsec</a><br />
            Demo site: <a href="https://www.nwebsec.com/NWebsec/NWebsec">www.nwebsec.com</a>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
